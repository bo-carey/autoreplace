{
  "private": true,
  "name": "backstabbr-assistant",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "scripts": {
    "build": "npm run build:firefox && npm run build:chrome",
    "build:chrome": "NODE_ENV=production BUILD_TARGET=chrome webpack",
    "build:firefox": "NODE_ENV=production BUILD_TARGET=firefox webpack",
    "dev": "npm run dev:firefox && npm run dev:chrome",
    "dev:chrome": "BUILD_TARGET=chrome webpack --watch",
    "dev:firefox": "BUILD_TARGET=firefox webpack --watch",
    "format": "npm run pretter:fix && npm run lint:fix && npm run ext:lint",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint --fix",
    "prettier": "npx prettier src -c",
    "prettier:fix": "npm run prettier -- --write",
    "start": "npm run build:firefox && npm run build:chrome",
    "ts:build": "tsc -b",
    "ts:check": "tsc --noEmit"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "dependencies": {
    "webext-options-sync": "^2.0.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/node": "^16.9.6",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webextension-polyfill": "^0.8.0",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.3.0",
    "webpack-extension-reloader": "^1.1.4"
  }
}
