{
  "private": true,
  "name": "backstabbr-assistant",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "scripts": {
    "build": "npm run clean && npm run copy-files && npm run ts:build",
    "clean": "rm -rf -- dist && mkdir dist",
    "copy-files": "npm run copy-files:manifest && npm run copy-files:images",
    "copy-files:manifest": "cp ./src/manifest.json ./dist/manifest.json",
    "copy-files:images": "cp ./src/images ./dist/images -r",
    "ext": "npx web-ext run -s src",
    "ext:lint": "npx web-ext lint -s src",
    "format": "npm run pretter:fix && npm run lint:fix && npm run ext:lint",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint --fix",
    "nodemon:start": "nodemon --watch 'src/**.ts' --watch 'src/scripts/**.ts' --ext 'ts,json' --exec 'npm run ts:build'",
    "prettier": "npx prettier src -c",
    "prettier:fix": "npm run prettier -- --write",
    "start": "npm run build && npm run nodemon:start",
    "ts:build": "tsc -b",
    "ts:check": "tsc --noEmit"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "dependencies": {
    "webext-options-sync": "^2.0.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/node": "^16.9.6",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint": "^0.7.0",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "web-ext": "^6.4.0",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.8.0"
  },
  "webExt": {
    "sourceDir": "dist"
  }
}
